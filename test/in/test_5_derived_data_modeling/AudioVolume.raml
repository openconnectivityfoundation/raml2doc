schemas:
  - RetrieveSchema: !include operation.audiovolume.json
  - UpdateSchema: !include operation.audiovolume.json

traits:
  - interface-all:
      queryParameters:
        if:
          enum: ["oic.if.a"]

/AudioVolumeResURI:
  description: |
    This API defines the mapping between an instance of an OCF Audio Controls
    and the ASA Audio Volume interface.
  displayName: Audio Volume Mapping
  is: [ interface-all ] # valid for all methods

  get:
    responses:
      200:
        body:
          application/json:
            schema: RetrieveSchema
            example: |
              {
                "rt":     ["oic.r.audio"],
                "maxvolume" : 100,
                "volume" : 50,
                "mute" : false
              }

  post:
    body:
      application/json:
        schema: UpdateSchema
    responses:
      200:
        body:
          application/json:
            schema: UpdateSchema
